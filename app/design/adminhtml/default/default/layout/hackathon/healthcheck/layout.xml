<?xml version="1.0"?>
<layout>

    <hackathon_healthcheck_check_index>

        <reference name = "head">
            <action method="addItem"><type>skin_js</type><script>js/healthcheck/jquery.js</script></action>
            <action method="addItem"><type>skin_js</type><script>js/healthcheck/jquery.noconflict.js</script></action>
            <action method="addItem"><type>skin_js</type><script>js/healthcheck/globalize.min.js</script></action>
            <action method="addItem"><type>skin_js</type><script>js/healthcheck/dx.chartjs.js</script></action>
            <action method="addItem"><type>skin_js</type><script>js/healthcheck/jquery.jsontotable.js</script></action>
            <action method="addItem"><type>skin_js</type><script>js/healthcheck/healthcheck.js</script></action>
        </reference>

        <reference name = "content">
            <block type = "hackathon_healthcheck/adminhtml_dashboard" name = "healthcheck_dashboard"
                    template = "hackathon/healthcheck/dashboard.phtml"/>
        </reference>

        <reference name = "healthcheck_dashboard">
            <block type = "hackathon_healthcheck/adminhtml_type_piechart" name = "healthcheck_check_piechart"
                    template = "hackathon/healthcheck/type/piechart.phtml"/>
        </reference>
        <reference name = "healthcheck_dashboard">
            <block type = "hackathon_healthcheck/adminhtml_type_table" name = "healthcheck_check_table"
                    template = "hackathon/healthcheck/type/table.phtml"/>
        </reference>
        <reference name = "healthcheck_dashboard">
            <block type = "hackathon_healthcheck/adminhtml_type_plaintext" name = "healthcheck_check_plaintext"
                    template = "hackathon/healthcheck/type/plaintext.phtml"/>
        </reference>
    </hackathon_healthcheck_check_index>

</layout>